@model IEnumerable<SoloProjectMvc.UserReference.User>

@{
    ViewBag.Title = "All Users";
}

<h2>All Users</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = "" }, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            Account Type
        </th>
        <th>
            Email Address
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccountType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserId }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Details", "Details", new { id = item.UserId }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
